<tr material_item_estimated_id="<%= material_item_estimated.id %>" >
<% if material_item_estimated.id.nil? %>
   <td><%= material_item_estimated.inspect %></td>
<% else %>
  <td><%= link_to material_item_estimated.item.name, material_item_estimated.item %></td>
  <td><%= material_item_estimated.quantity %></td>
    <td><%= material_item_estimated.item.base_unit %></td>
  <td ><%= number_to_currency(material_item_estimated.item.average_cost(material_item_estimated.project.program,
                                                                       Date.today), :unit => "$") %></td>
  <td ><%= number_to_currency(material_item_estimated.item.average_cost(material_item_estimated.project.program,
                                                                         Date.today) * material_item_estimated.quantity, :unit => "$") %></td>
  <td><%= link_to "Edit", edit_material_item_estimated_path(material_item_estimated),  #:remote => true
        %></td>
  <td><%= link_to "Remove", material_item_estimated_path(material_item_estimated),  #:remote => true,
                  :method => :delete, :confirm => "Are you sure you want to remove #{material_item_estimated.item} from this project?", :title => "Confirm Delete" %></td>
    </tr>
<% end %>